@model Chat.DTO.DTO.UserDTO

@{
    ViewBag.Title = "PersonalInfo";
    Layout = "~/Views/Share/_Layout2.cshtml";
}

<h2>个人资料</h2>
<div class="wrapper">
    <section class="panel">
        <!--主体开始-->

        <section>
            <div class="row">
                <div class="col-md-6 tablet-column-reset" style="padding: 10px 40px;">
                    @using (Html.BeginForm("ModifitLoginInfo", "Team", FormMethod.Post))
                    {@Html.HiddenFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">资料详情</h3>
                        </div>
                        <div class="form-horizontal margin-none" id="loginForm">
                            <input type="hidden" name="id" value="1859" runat="server" />
                            <div class="widget-body" style="padding: 20px; overflow: auto;">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">会员编号 :</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(p => p.UserCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" }, @value = @Model.UserCode })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">手机号码 :</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(p => p.PhoneNum, new { htmlAttributes = new { @class = "form-control" }, @value = @Model.PhoneNum })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">注册金额 :</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(p => p.RegMoney, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" }, @value = @Model.RegMoney })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">会员级别 :</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(p => p.LevelName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @type = "text" }, @value = @Model.LevelID })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">推荐人编号 :</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(p => p.RecommendCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" }, @value = @Model.RecommendCode })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">安置会员编号 :</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(p => p.ParentCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" }, @value = @Model.ParentCode })
                                    </div>
                                </div>
                                <div style="clear: both;"></div>

                            </div>
                            <footer class="data-footer innerAll half text-right clearfix">
                                <input type="submit" value="修改" class="btn btn-primary coinkg" />

                            </footer>
                        </div>
                    </div>
                }
                    <div class="panel panel-default" style="margin-top: 20px;">
                        <div class="panel-heading">
                            <h3 class="panel-title">修改登录密码</h3>
                        </div>
                        @using (Html.BeginForm("ModifitLoginPwd", "Team", FormMethod.Post))
                        {@Html.HiddenFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })

                        <div class="form-horizontal margin-none" id="myform">
                            <div class="widget-body" style="padding: 20px; overflow: auto;">
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="firstname">旧登录密码 :</label>
                                    <div class="col-md-8">
                                        <div class="controls">
                                            <input type="password" id="oldpwd" name="oldpwd" class="form-control" autocomplete = "off"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="firstname">新登录密码 :</label>
                                    <div class="col-md-8">
                                        <div class="controls">
                                            @Html.EditorFor(p => p.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @autocomplete = "off" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">确认登录新密码 :</label>
                                    <div class="col-md-8">
                                        <input type="password" id="repwd" name="repwd" class="form-control" autocomplete = "off"/>

                                    </div>
                                </div>

                            </div>
                            <footer class="data-footer innerAll half text-right clearfix">
                                <input type="submit" value="修改" class="btn btn-primary coinkg" />
                            </footer>
                        </div>
                    }
                    </div>
                </div>
                <div class="col-md-6 tablet-column-reset" style="padding: 10px 40px;">
                    @using (Html.BeginForm("ModifitBaseInfo", "Team", FormMethod.Post))
                    {@Html.HiddenFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">个人资料</h3>
                        </div>
                        <div class="form-horizontal margin-none">
                            <div class="widget-body" style="padding: 20px; overflow: auto;">
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="firstname">会员姓名 :</label>
                                    <div class="col-md-8">
                                        <div class="controls">
                                            @Html.EditorFor(p => p.TrueName, new { htmlAttributes = new { @class = "form-control" }, @value = @Model.TrueName })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">身份证号 :</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(p => p.IdenCode, new { htmlAttributes = new { @class = "form-control" }, @value = @Model.IdenCode })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">开户银行 :</label>
                                    <div class="col-md-4">
                                        @Html.DropDownList("BankName", new SelectList(ViewBag.BankModelList, "BankName", "BankName", "--请选择--"), new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">银行支行 :</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(p => p.BankBranch, new { htmlAttributes = new { @class = "form-control" }, @value = @Model.BankBranch })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">银行账户 :</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(p => p.BankAccount, new { htmlAttributes = new { @class = "form-control" }, @value = @Model.BankAccount })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">开户姓名 :</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(p => p.BankAccountUser, new { htmlAttributes = new { @class = "form-control" }, @value = @Model.BankAccountUser })
                                    </div>
                                </div>
                            </div>
                            <footer class="data-footer innerAll half text-right clearfix">
                                <input type="submit" value="修改" class="btn btn-primary coinkg" />
                            </footer>
                        </div>
                    </div>
                }
                    @using (Html.BeginForm("ModifitSecodePwd", "Team", FormMethod.Post))
                    {@Html.HiddenFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="panel panel-default" style="margin-top: 20px;">
                        <div class="panel-heading">
                            <h3 class="panel-title">修改二级密码</h3>
                        </div>
                        <div class="form-horizontal margin-none" id="myform1">
                            <div class="widget-body" style="padding: 20px;">
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="firstname">旧二级密码 :</label>
                                    <div class="col-md-8">
                                        <div class="controls">
                                            <input type="password" name="oldsepwd" id="oldsepwd" class="form-control" autocomplete = "off"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">新二级密码 :</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(p => p.SecondPassword, new { htmlAttributes = new { @class = "form-control", @type = "password", @autocomplete = "off" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">确认二级密码 :</label>
                                    <div class="col-md-8">
                                        <input type="password" name="resepwd" id="resepwd" class="form-control" autocomplete="off" />
                                    </div>
                                </div>
                            </div>
                            <footer class="data-footer innerAll half text-right clearfix">
                                <input type="submit" value="修改" class="btn btn-primary coinkg" />
                            </footer>
                        </div>
                    </div>
                }
                </div>
            </div>
        </section>

        <!--./主体开始-->
    </section>
</div>

