            <li>&nbsp;</li>
            <li style="padding-left: 10px;">
                <a id="btnBack" class="easyui-linkbutton" iconcls="icon-save" >备份数据库</a>
                <a id="btnClear" class="easyui-linkbutton" iconcls="icon-cancel" >清空测试数据</a>
                @Model   
