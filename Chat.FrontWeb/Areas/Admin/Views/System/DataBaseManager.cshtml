                            <a ID="lbtnH" class="easyui-linkbutton" iconcls="icon-back">还原</a>
                            <a ID="lbtnX" class="easyui-linkbutton" iconcls="icon-print">下载</a>
                            <a ID="lbtnB" class="easyui-linkbutton" iconcls="icon-no">删除</a>
                        </td>
                    </tr>
                </table>
            </li>
            <li>
                
            </li>
        </ul>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#btnClear").click(function () {
            if(!confirm('确定要清空测试数据吗?'))
            {
                return false;
            }

            $.ajax({
                url: "/Admin/system/clear", type: "post",
                success: function (result) {
                    if (result.status == 1) {
                        alert("测试数据清空成功")
                    }
                    else if (result.status == 0) {
                        alert(result.msg);
                    }
                },
                error: function () { alert("网络错误"); }
            });
        });
    });
</script>