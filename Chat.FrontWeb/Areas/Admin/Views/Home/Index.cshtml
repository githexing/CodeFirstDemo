@model Chat.FrontWeb.Areas.Admin.Models.IndexViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>主页</title>
    <link href="~/Areas/Admin/Content/Base.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/themes/icon.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/themes/default/easyui.css" rel="stylesheet" />
    <script src="~/Areas/Admin/Scripts/jquery.js"></script>
    <script src="~/Areas/Admin/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Areas/Admin/Scripts/Common.js"></script>
    <script src="~/Areas/Admin/Scripts/main-layout.js"></script>
    <script src="~/Areas/Admin/Scripts/My97DatePicker/WdatePicker.js"></script>
</head>
<body class="easyui-layout">
    <!--头部s-->
    <div region="north" style="overflow:hidden;">
        <div class="index_logo">
            <div class="index_logo_top"></div>
            <div class="index_logo_bottom">
                <p><a href="/admin/user/logout">[退出系统]</a></p>
                <p>您的级别：@Model.ID</p>
                <p>欢迎 <span></span>登录后台管理</p>
            </div>
        </div>
    </div>
    <!--头部e-->
    <!--导航s-->
    <div region="west" split="true" title="系统菜单" style="width: 200px; padding: 1px;
        overflow: hidden;">
        <div class="easyui-accordion" fit="true" border="false">
            @foreach (var list in Model.MenuList)
            {
                <div title="@list.Parent.MenuName" style="padding: 10px; overflow: auto;">
                    @foreach (var modelList in list.Child)
                    {
                        <p>
                            <a class="h30" href="#" onclick="addTab('@modelList.MenuName','@modelList.URL',@modelList.ID)">@modelList.MenuName</a>
                        </p>
                    }                    
                </div>
            }            
        </div>
    </div>
    <!--导航e-->
    <!--中间内容s-->
    <div id="main-panel" region="center" style="background: #eee; overflow-y:hidden">
        <div id="tabs" class="easyui-tabs" fit="true" border="false">
            <div title="首页" style="padding:20px;overflow:hidden; color:red; ">
                <iframe scrolling="auto" id="ifr我的工作台" frameborder="0" src="/admin/home/zhuye" style="width: 100%;
                    height: 100%;"></iframe>
            </div>
        </div>
    </div>
    <!--中间内容e-->
    <!--版权-->
    <%--<div class="index_footer"> CopyRight@2010-2012 QDCCAP 版权所有AllRirghtReservice </div>--%>
    <%-- START right menu --%>
    <div id="mm" class="easyui-menu" style="width:150px;">
        <div id="mm-tabupdate">刷新</div>
        <div class="menu-sep"></div>
        <div id="mm-tabclose">关闭</div>
        <div id="mm-tabcloseall">全部关闭</div>
        <div id="mm-tabcloseother">除此之外全部关闭</div>
        <div class="menu-sep"></div>
        <div id="mm-tabcloseright">当前页右侧全部关闭</div>
        <div id="mm-tabcloseleft">当前页左侧全部关闭</div>
        <div class="menu-sep"></div>
        <div id="mm-exit">退出</div>
    </div>
    <%-- END right menu --%>
</body>
</html>
